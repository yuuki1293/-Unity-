;; COMポート／ボー・レート設定 
COM_PORT = '4'
BAUDRATE = '9600'
;=================================================== 
;; ①コマンド組立て 
COMMAND = '/I /C=' 
strconcat COMMAND COM_PORT 
strconcat COMMAND ' /BAUD='
strconcat COMMAND BAUDRATE
 
;; ②接続 
connect COMMAND
fileopen FH 'C:\Users\yuuki\動画再生\Assets\bluetooth_unity.pfu' 0
filewriteln FH '0'
fileclose FH

do
    ;4523??が来るまで待つ
    waitregex '[1-6]'
    ;500秒待つ
    mpause 500  
    ;fileopen ファイルハンドル　ファイル名　読み出す位置：ファイルを開く
    ;filewriteln ファイルハンドル　文字列：ファイルに書き込む
    ;fileclose フィアルハンドル：ファイルを閉じる
    fileopen FH 'C:\Users\yuuki\動画再生\Assets\bluetooth_unity.pfu' 0
    filewriteln FH inputstr
    fileclose FH
loop
